<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/filtering_contentsbox"
    android:paddingBottom="27dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="27dp">

    <ImageView
        android:id="@+id/view_holder_comment_picture_image_view"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:scaleType="fitXY"
        android:src="@drawable/noneimage" />

    <TextView
        android:id="@+id/view_holder_comment_user_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/view_holder_comment_picture_image_view"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_toEndOf="@id/view_holder_comment_picture_image_view"
        android:layout_toRightOf="@id/view_holder_comment_picture_image_view"
        android:textColor="@color/bikeeBlue"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/view_holder_comment_bicycle_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/view_holder_comment_user_name_text_view"
        android:layout_alignStart="@id/view_holder_comment_user_name_text_view"
        android:layout_below="@id/view_holder_comment_user_name_text_view"
        android:layout_marginTop="11dp"
        android:textColor="@color/bikeeBlack"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/view_holder_comment_date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/view_holder_comment_bicycle_title_text_view"
        android:layout_alignStart="@id/view_holder_comment_bicycle_title_text_view"
        android:layout_below="@id/view_holder_comment_bicycle_title_text_view"
        android:layout_marginTop="10dp"
        android:textColor="@color/bikeeLightGray"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/view_holder_comment_comment_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/view_holder_comment_bicycle_title_text_view"
        android:layout_alignStart="@id/view_holder_comment_bicycle_title_text_view"
        android:layout_below="@id/view_holder_comment_date_text_view"
        android:layout_marginTop="24dp"
        android:textColor="@color/bikeeLightGray"
        android:textSize="12dp" />

    <RatingBar
        android:id="@+id/view_holder_comment_point_rating_bar"
        style="@style/BikeeRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/view_holder_comment_bicycle_title_text_view"
        android:layout_alignStart="@id/view_holder_comment_bicycle_title_text_view"
        android:layout_below="@id/view_holder_comment_comment_text_view"
        android:layout_marginTop="12dp"
        android:isIndicator="true" />
</RelativeLayout>