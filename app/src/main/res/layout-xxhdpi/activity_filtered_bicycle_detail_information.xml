<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.tacademy.bikee.renter.searchresult.bicycledetailinformation.FilteredBicycleDetailInformationActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/activity_filtered_bicycle_detail_information_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/bikeeBlue"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bikeeBackground"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/activity_filtered_bicycle_detail_information_bicycle_picture_lister_information_bicycle_introduction_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/bikeeWhite"
                android:paddingBottom="48dp">

                <include
                    android:id="@+id/activity_filtered_bicycle_detail_information_bicycle_picture_lister_information_layout"
                    layout="@layout/bicycle_picture_lister_information"
                    android:layout_width="match_parent"
                    android:layout_height="307dp" />

                <include
                    layout="@layout/bicycle_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/activity_filtered_bicycle_detail_information_bicycle_picture_lister_information_layout"
                    android:layout_marginTop="29dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/activity_filtered_bicycle_detail_informaition_bicycle_information_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_filtered_bicycle_detail_information_bicycle_picture_lister_information_bicycle_introduction_layout"
                android:background="@color/bikeeWhite">

                <View
                    android:id="@+id/activity_filtered_bicycle_detail_information_bicycle_picture_name_introduction_bicycle_type_line"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@color/bikeeLightGray" />

                <include
                    android:id="@+id/activity_filtered_bicycle_detail_information_bicycle_type_layout"
                    layout="@layout/bicycle_detail_information_bicycle_type"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:layout_below="@+id/activity_filtered_bicycle_detail_information_bicycle_picture_name_introduction_bicycle_type_line" />

                <View
                    android:id="@+id/activity_filtered_bicycle_detail_information_bicycle_type_bicycle_recommendation_height_line"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@+id/activity_filtered_bicycle_detail_information_bicycle_type_layout"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@color/bikeeLightGray" />

                <include
                    android:id="@+id/activity_filtered_bicycle_detail_information_bicycle_height_layout"
                    layout="@layout/bicycle_detail_information_bicycle_height"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:layout_below="@+id/activity_filtered_bicycle_detail_information_bicycle_type_bicycle_recommendation_height_line" />

                <View
                    android:id="@+id/activity_filtered_bicycle_detail_information_bicycle_height_bicycle_component_line"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@+id/activity_filtered_bicycle_detail_information_bicycle_height_layout"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@color/bikeeLightGray" />

                <include
                    android:id="@+id/activity_filtered_bicycle_detail_information_bicycle_component_layout"
                    layout="@layout/bicycle_detail_information_bicycle_component"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:layout_below="@+id/activity_filtered_bicycle_detail_information_bicycle_height_bicycle_component_line" />

                <View
                    android:id="@+id/activity_filtered_bicycle_detail_information_bicycle_component_bicycle_rental_place_line"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@+id/activity_filtered_bicycle_detail_information_bicycle_component_layout"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@color/bikeeLightGray" />

                <include
                    android:id="@+id/activity_filtered_bicycle_detail_information_bicycle_rental_place_layout"
                    layout="@layout/bicycle_detail_information_bicycle_location"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:layout_below="@+id/activity_filtered_bicycle_detail_information_bicycle_component_bicycle_rental_place_line" />

                <RelativeLayout
                    android:id="@+id/activity_filtered_bicycle_detail_information_map_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/activity_filtered_bicycle_detail_information_bicycle_rental_place_layout"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp">

                    <fragment
                        android:id="@+id/activity_filtered_bicycle_detail_information_small_map"
                        android:name="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="217dp" />
                </RelativeLayout>

                <include
                    android:id="@+id/activity_filtered_bicycle_detail_information_reservation_period_layout"
                    layout="@layout/bicycle_detail_information_reservation_period"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/activity_filtered_bicycle_detail_information_map_layout" />

                <View
                    android:id="@+id/activity_filtered_bicycle_detail_information_reservation_period_total_time_line"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@+id/activity_filtered_bicycle_detail_information_reservation_period_layout"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@color/bikeeLightGray" />
            </RelativeLayout>

            <include
                android:id="@+id/activity_filtered_bicycle_detail_information_reservation_price_layout"
                layout="@layout/bicycle_detail_information_reservation_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_filtered_bicycle_detail_informaition_bicycle_information_layout"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/contents_box_margin_bottom_5dp" />

            <RelativeLayout
                android:id="@+id/activity_filtered_bicycle_detail_information_bicycle_post_script_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_filtered_bicycle_detail_information_reservation_price_layout"
                android:layout_marginTop="32dp"
                android:background="@drawable/detailpage_back_img2"
                android:paddingBottom="26dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="25dp">

                <ImageView
                    android:id="@+id/activity_filtered_bicycle_detail_information_bicycle_post_script_renter_image"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/noneimage" />

                <TextView
                    android:id="@+id/activity_filtered_bicycle_detail_information_bicycle_post_script_renter_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/activity_filtered_bicycle_detail_information_bicycle_post_script_renter_image"
                    android:layout_marginLeft="11dp"
                    android:layout_marginStart="11dp"
                    android:layout_toEndOf="@id/activity_filtered_bicycle_detail_information_bicycle_post_script_renter_image"
                    android:layout_toRightOf="@id/activity_filtered_bicycle_detail_information_bicycle_post_script_renter_image"
                    android:textColor="@color/bikeeBlue"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/activity_filtered_bicycle_detail_information_bicycle_post_script_create_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/activity_filtered_bicycle_detail_information_bicycle_post_script_renter_name"
                    android:layout_alignStart="@id/activity_filtered_bicycle_detail_information_bicycle_post_script_renter_name"
                    android:layout_below="@id/activity_filtered_bicycle_detail_information_bicycle_post_script_renter_name"
                    android:layout_marginTop="9dp"
                    android:textColor="@color/bikeeLightGray"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/activity_filtered_bicycle_detail_information_bicycle_post_script_renter_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/activity_filtered_bicycle_detail_information_bicycle_post_script_renter_name"
                    android:layout_alignStart="@id/activity_filtered_bicycle_detail_information_bicycle_post_script_renter_name"
                    android:layout_below="@+id/activity_filtered_bicycle_detail_information_bicycle_post_script_create_date"
                    android:layout_marginTop="24dp"
                    android:textColor="@color/bikeeGray"
                    android:textSize="12sp" />

                <RatingBar
                    android:id="@+id/activity_filtered_bicycle_detail_information_bicycle_post_script_rating_bar"
                    style="@style/BikeeRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/activity_filtered_bicycle_detail_information_bicycle_post_script_renter_name"
                    android:layout_alignStart="@id/activity_filtered_bicycle_detail_information_bicycle_post_script_renter_name"
                    android:layout_below="@id/activity_filtered_bicycle_detail_information_bicycle_post_script_renter_comment"
                    android:layout_marginTop="12dp"
                    android:isIndicator="true" />

                <Button
                    android:id="@+id/activity_filtered_bicycle_detail_information_bicycle_post_script_button"
                    android:layout_width="72dp"
                    android:layout_height="30dp"
                    android:layout_below="@id/activity_filtered_bicycle_detail_information_bicycle_post_script_rating_bar"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/detailpage_icon_more" />
            </RelativeLayout>

            <Button
                android:id="@+id/activity_filtered_bicycle_detail_information_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_filtered_bicycle_detail_information_bicycle_post_script_layout"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="26dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="42dp"
                android:background="@drawable/detailpage_button2"
                android:text="예약하기"
                android:textColor="@color/bikeeWhite"
                android:textSize="19sp" />
        </RelativeLayout>
    </ScrollView>
</android.support.design.widget.CoordinatorLayout>