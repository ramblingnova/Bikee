<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/view_evluated_bicycle_post_script_item_renter_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/temp_icon" />

    <ImageView
        android:id="@+id/view_evluated_bicycle_post_script_item_bicycle_picture"
        android:src="@drawable/temp_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/view_evluated_bicycle_post_script_item_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/view_evluated_bicycle_post_script_item_renter_image"
        android:text="bike@naver.com" />

    <TextView
        android:id="@+id/view_evluated_bicycle_post_script_item_bicycle_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_evluated_bicycle_post_script_item_email"
        android:layout_toRightOf="@id/view_evluated_bicycle_post_script_item_renter_image"
        android:text="자전거이름" />

    <RatingBar
        android:id="@+id/view_evluated_bicycle_post_script_item_rating_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_below="@id/view_evluated_bicycle_post_script_item_bicycle_name"
        android:layout_toRightOf="@id/view_evluated_bicycle_post_script_item_renter_image"/>

    <TextView
        android:id="@+id/view_evluated_bicycle_post_script_item_post_script"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_evluated_bicycle_post_script_item_rating_bar"
        android:layout_toRightOf="@id/view_evluated_bicycle_post_script_item_renter_image"
        android:text="멋진 자전거에요. 다음에 또 이용하겠습니다." />

    <TextView
        android:id="@+id/view_evluated_bicycle_post_script_item_date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_evluated_bicycle_post_script_item_post_script"
        android:layout_toRightOf="@id/view_evluated_bicycle_post_script_item_renter_image"
        android:text="10.05 00:05" />
</RelativeLayout>