<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.tacademy.bikee.common.sidemenu.SignUpActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/activity_sign_up_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/bikeeBlue"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/activity_sign_up_image_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/activity_sign_up_image_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/temp_icon" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/activity_sign_up_name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_sign_up_image_layout"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/activity_sign_up_name_text_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/activity_sign_up_name_string" />

                <EditText
                    android:id="@+id/activity_sign_up_input_name_edit_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/activity_sign_up_mail_address_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_sign_up_name_layout"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/activity_sign_up_mail_address_text_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/activity_sign_up_mail_address_text_view_string" />

                <EditText
                    android:id="@+id/activity_sign_up_input_mail_address_edit_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/activity_sign_up_cellphone_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_sign_up_mail_address_layout"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/activity_sign_up_cellphone_text_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/activity_sign_up_cellphone_text_view_string" />

                <EditText
                    android:id="@+id/activity_sign_up_input_cellphone_edit_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/activity_sign_up_authentication_button"
                    style="@style/Widget.AppCompat.Button.Small"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/activity_sign_up_authentication_button_string" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/activity_sign_up_confirm_authentication_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_sign_up_cellphone_layout"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/activity_sign_up_authentication_number_edit_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/activity_sign_up_confirm_button_authentication"
                    style="@style/Widget.AppCompat.Button.Small"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/activity_sign_up_confirm_authentication_button_string" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/activity_sign_up_password_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_sign_up_confirm_authentication_layout"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/activity_sign_up_password_text_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/activity_sign_up_password_text_view_string" />

                <EditText
                    android:id="@+id/activity_sign_up_input_password_edit_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:password="true" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/activity_sign_up_receive_information_agreement_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_sign_up_password_layout">

                <TextView
                    android:id="@+id/activity_sign_up_receive_information_agreement_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/activity_sign_up_receive_information_agreement_text_view_string" />

                <CheckBox
                    android:id="@+id/activity_sign_up_mail_information_agreement_check_box"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/activity_sign_up_receive_information_agreement_text_view"
                    android:text="@string/activity_sign_up_mail_information_agreement_check_box_string" />

                <CheckBox
                    android:id="@+id/activity_sign_up_sms_information_agreement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/activity_sign_up_mail_information_agreement_check_box"
                    android:text="@string/activity_sign_up_sms_information_agreement_check_box_string" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/activity_sign_up_terms_agreement_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_sign_up_receive_information_agreement_layout">

                <TextView
                    android:id="@+id/activity_sign_up_terms_agreement_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/activity_sign_up_terms_agreement_text_view_string" />

                <CheckBox
                    android:id="@+id/activity_sign_up_terms_bikee_agreement_check_box"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/activity_sign_up_terms_agreement_text_view"
                    android:text="@string/activity_sign_up_terms_bikee_agreement_check_box_string" />

                <CheckBox
                    android:id="@+id/activity_sign_up_terms_location_information_agreement_check_box"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/activity_sign_up_terms_bikee_agreement_check_box"
                    android:text="@string/activity_sign_up_terms_location_information_agreement_check_box_string" />

                <CheckBox
                    android:id="@+id/activity_sign_up_terms_information_gathering_agreement_check_box"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/activity_sign_up_terms_location_information_agreement_check_box"
                    android:text="@string/activity_sign_up_terms_information_gathering_agreement_check_box_string" />
            </RelativeLayout>

            <Button
                android:id="@+id/activity_sign_up_sign_up_button"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_sign_up_terms_agreement_layout"
                android:text="@string/activity_sign_up_sign_up_button_string" />
        </RelativeLayout>
    </ScrollView>
</android.support.design.widget.CoordinatorLayout>