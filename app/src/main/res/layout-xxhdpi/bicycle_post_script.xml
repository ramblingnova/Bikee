<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RatingBar
        android:id="@+id/bicycle_post_script_rating_bar"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/bicycle_post_script_user_image_view"
        android:src="@drawable/temp_icon"
        android:layout_below="@+id/bicycle_post_script_rating_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/bicycle_post_script_user_name"
        android:layout_toRightOf="@id/bicycle_post_script_user_image_view"
        android:layout_below="@+id/bicycle_post_script_rating_bar"
        android:text="문근영"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_toRightOf="@id/bicycle_post_script_user_image_view"
        android:layout_below="@+id/bicycle_post_script_user_name"
        android:text="자전거 깨끗하고 너무 좋아요"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_below="@+id/bicycle_post_script_user_image_view"
        android:id="@+id/bicycle_post_script_see_more_post_script"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="후기 더 보기"/>
</RelativeLayout>