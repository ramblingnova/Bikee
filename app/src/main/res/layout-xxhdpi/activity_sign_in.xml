<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bikee.www.common.sidemenu.SignInActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="35dp"
        android:paddingRight="35dp"
        android:paddingTop="85dp">

        <ImageView
            android:id="@+id/activity_sign_in_logo_image_view"
            android:layout_width="80dp"
            android:layout_height="128dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/login_logo" />

        <RelativeLayout
            android:id="@+id/activity_sign_in_email_password_sign_in_out_layout"
            android:layout_width="match_parent"
            android:layout_height="159dp"
            android:layout_below="@id/activity_sign_in_logo_image_view"
            android:layout_marginTop="81dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">

                <RelativeLayout
                    android:id="@+id/activity_sign_in_user_email_layout"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/login_input_box"
                    android:focusable="true"
                    android:focusableInTouchMode="true">

                    <ImageView
                        android:id="@+id/activity_sign_in_user_email_icon_image_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="23dp"
                        android:layout_marginStart="23dp"
                        android:src="@drawable/login_email_icon" />

                    <ImageView
                        android:id="@+id/activity_sign_in_user_email_check_image_view"
                        android:layout_width="22dp"
                        android:layout_height="18dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="18dp"
                        android:layout_marginRight="18dp"
                        android:src="@drawable/login_input_finish_icon"
                        android:visibility="invisible" />

                    <EditText
                        android:id="@+id/activity_sign_in_user_email_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="19dp"
                        android:layout_marginRight="19dp"
                        android:layout_toEndOf="@id/activity_sign_in_user_email_icon_image_view"
                        android:layout_toLeftOf="@id/activity_sign_in_user_email_check_image_view"
                        android:layout_toRightOf="@id/activity_sign_in_user_email_icon_image_view"
                        android:layout_toStartOf="@id/activity_sign_in_user_email_check_image_view"
                        android:background="@null"
                        android:hint="@string/activity_sign_in_user_email_edit_text_string"
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress"
                        android:nextFocusDown="@+id/activity_sign_in_user_password_edit_text"
                        android:nextFocusForward="@+id/activity_sign_in_user_password_edit_text"
                        android:nextFocusLeft="@+id/activity_sign_in_user_password_edit_text"
                        android:nextFocusRight="@+id/activity_sign_in_user_password_edit_text"
                        android:nextFocusUp="@+id/activity_sign_in_user_password_edit_text"
                        android:singleLine="true"
                        android:textColor="@color/bikeeBlue"
                        android:textColorHint="@color/bikeeLine"
                        android:textSize="14dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/activity_sign_in_user_password_layout"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:layout_below="@id/activity_sign_in_user_email_layout"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="9dp"
                    android:background="@drawable/login_input_box"
                    android:focusable="true"
                    android:focusableInTouchMode="true">

                    <ImageView
                        android:id="@+id/activity_sign_in_user_password_icon_image_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="23dp"
                        android:layout_marginStart="23dp"
                        android:src="@drawable/login_password_icon" />

                    <ImageView
                        android:id="@+id/activity_sign_in_user_password_check_image_view"
                        android:layout_width="22dp"
                        android:layout_height="18dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="18dp"
                        android:layout_marginRight="18dp"
                        android:src="@drawable/login_input_finish_icon"
                        android:visibility="invisible" />

                    <EditText
                        android:id="@+id/activity_sign_in_user_password_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="19dp"
                        android:layout_marginRight="19dp"
                        android:layout_toEndOf="@id/activity_sign_in_user_password_icon_image_view"
                        android:layout_toLeftOf="@id/activity_sign_in_user_password_check_image_view"
                        android:layout_toRightOf="@id/activity_sign_in_user_password_icon_image_view"
                        android:layout_toStartOf="@id/activity_sign_in_user_password_check_image_view"
                        android:background="@null"
                        android:hint="@string/activity_sign_in_user_password_edit_text"
                        android:imeOptions="actionDone"
                        android:inputType="textPassword"
                        android:singleLine="true"
                        android:textColorHint="@color/bikeeLine"
                        android:textSize="14dp" />
                </RelativeLayout>

                <Button
                    android:id="@+id/activity_sign_in_sign_button"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:layout_below="@id/activity_sign_in_user_password_layout"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="9dp"
                    android:background="@drawable/detailpage_button1"
                    android:clickable="false"
                    android:enabled="false"
                    android:text="@string/activity_sign_in_sign_in_button_string"
                    android:textColor="@color/bikeeWhite"
                    android:textSize="16dp" />
            </RelativeLayout>
        </RelativeLayout>

        <CheckBox
            android:id="@+id/activity_sign_in_remember_sign_in_information_check_box"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignLeft="@id/activity_sign_in_email_password_sign_in_out_layout"
            android:layout_alignStart="@id/activity_sign_in_email_password_sign_in_out_layout"
            android:layout_below="@id/activity_sign_in_email_password_sign_in_out_layout"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_check_selector"
            android:button="@null" />

        <TextView
            android:id="@+id/activity_sign_in_remember_sign_in_information_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/activity_sign_in_remember_sign_in_information_check_box"
            android:layout_toEndOf="@id/activity_sign_in_remember_sign_in_information_check_box"
            android:layout_toRightOf="@id/activity_sign_in_remember_sign_in_information_check_box"
            android:text="@string/activity_sign_in_remember_sign_in_information_text_view_string"
            android:textColor="@color/bikeeBlue"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/activity_sign_in_find_password_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/activity_sign_in_remember_sign_in_information_check_box"
            android:layout_alignEnd="@id/activity_sign_in_email_password_sign_in_out_layout"
            android:layout_alignRight="@id/activity_sign_in_email_password_sign_in_out_layout"
            android:text="@string/activity_sign_in_find_password_text_view_string"
            android:textColor="@color/bikeeGray"
            android:textSize="12dp" />

        <ImageView
            android:id="@+id/activity_sign_in_find_id_password_view"
            android:layout_width="1dp"
            android:layout_height="14dp"
            android:layout_alignBottom="@id/activity_sign_in_remember_sign_in_information_check_box"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@id/activity_sign_in_find_password_text_view"
            android:layout_toStartOf="@id/activity_sign_in_find_password_text_view"
            android:background="@color/bikeeGray" />

        <TextView
            android:id="@+id/activity_sign_in_find_id_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/activity_sign_in_remember_sign_in_information_check_box"
            android:layout_toLeftOf="@id/activity_sign_in_find_id_password_view"
            android:layout_toStartOf="@id/activity_sign_in_find_id_password_view"
            android:text="@string/activity_sign_in_find_id_text_view_string"
            android:textColor="@color/bikeeGray"
            android:textSize="12dp" />

        <RelativeLayout
            android:id="@+id/activity_sign_in_other_id_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_sign_in_remember_sign_in_information_check_box"
            android:layout_marginTop="30dp">

            <View
                android:id="@+id/activity_sign_in_left_line_view"
                android:layout_width="92dp"
                android:layout_height="1dp"
                android:layout_centerVertical="true"
                android:background="@color/bikeeBlue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="다른 아이디로 연동"
                android:textColor="@color/bikeeBlue"
                android:textSize="11dp" />

            <View
                android:id="@+id/activity_sign_in_right_line_view"
                android:layout_width="92dp"
                android:layout_height="1dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@color/bikeeBlue" />
        </RelativeLayout>

        <Button
            android:id="@+id/activity_sign_in_facebook_button"
            android:layout_width="75dp"
            android:layout_height="30dp"
            android:layout_alignLeft="@id/activity_sign_in_email_password_sign_in_out_layout"
            android:layout_alignStart="@id/activity_sign_in_email_password_sign_in_out_layout"
            android:layout_below="@id/activity_sign_in_other_id_layout"
            android:layout_marginTop="11dp"
            android:background="@drawable/login_another_id_button1" />

        <Button
            android:id="@+id/activity_sign_in_naver_button"
            android:layout_width="75dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@id/activity_sign_in_facebook_button"
            android:layout_centerHorizontal="true"
            android:background="@drawable/login_another_id_button2" />

        <Button
            android:id="@+id/activity_sign_in_kakaotalk_button"
            android:layout_width="75dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@id/activity_sign_in_facebook_button"
            android:layout_alignEnd="@id/activity_sign_in_email_password_sign_in_out_layout"
            android:layout_alignRight="@id/activity_sign_in_email_password_sign_in_out_layout"
            android:background="@drawable/login_another_id_button3" />

        <TextView
            android:id="@+id/activity_sign_in_sign_up_string"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_sign_in_naver_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="@string/activity_sign_in_sign_up_string"
            android:textColor="@color/bikeeBlue"
            android:textSize="14dp" />
    </RelativeLayout>
</ScrollView>