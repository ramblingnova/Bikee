<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="35dp"
    android:paddingRight="35dp"
    android:paddingTop="109dp"
    tools:context="com.example.tacademy.bikee.common.sidemenu.SignInActivity">

    <ImageView
        android:id="@+id/activity_sign_in_logo_image_view"
        android:layout_width="80dp"
        android:layout_height="128dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/temp_icon" />

    <RelativeLayout
        android:id="@+id/activity_sign_in_user_email_layout"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_below="@id/activity_sign_in_logo_image_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="81dp"
        android:background="@drawable/login_input_box">

        <EditText
            android:id="@+id/activity_sign_in_user_email_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/activity_sign_in_user_email_edit_text_string" />

        <TextView
            android:id="@+id/activity_sign_in_user_email_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/activity_sign_in_user_password_layout"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_below="@id/activity_sign_in_user_email_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="9dp"
        android:background="@drawable/login_input_box">

        <EditText
            android:id="@+id/activity_sign_in_user_password_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/activity_sign_in_user_password_edit_text"
            android:password="true" />

        <TextView
            android:id="@+id/activity_sign_in_user_password_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </RelativeLayout>

    <Button
        android:id="@+id/activity_sign_in_sign_in_button"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_below="@id/activity_sign_in_user_password_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="9dp"
        android:background="@drawable/login_login_button"
        android:text="@string/activity_sign_in_sign_in_button_string" />

    <CheckBox
        android:id="@+id/activity_sign_in_remember_sign_in_information_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/activity_sign_in_sign_in_button"
        android:layout_below="@id/activity_sign_in_sign_in_button"
        android:background="@drawable/login_check_selector"
        android:button="@null" />

    <TextView
        android:id="@+id/activity_sign_in_remember_sign_in_information_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/activity_sign_in_remember_sign_in_information_check_box"
        android:layout_toRightOf="@id/activity_sign_in_remember_sign_in_information_check_box"
        android:text="@string/activity_sign_in_remember_sign_in_information_text_view_string" />

    <TextView
        android:id="@+id/activity_sign_in_find_id_password_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/activity_sign_in_sign_in_button"
        android:layout_below="@id/activity_sign_in_sign_in_button"
        android:text="@string/activity_sign_in_find_id_password_text_view_string" />

    <RelativeLayout
        android:id="@+id/activity_sign_in_other_id_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_sign_in_remember_sign_in_information_check_box">

        <ImageView
            android:id="@+id/activity_sign_in_left_line_image_view"
            android:layout_width="92dp"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:background="@color/bikeeBlue" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="다른 아이디로 연동" />

        <ImageView
            android:id="@+id/activity_sign_in_right_line_image_view"
            android:layout_width="92dp"
            android:layout_height="1dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/bikeeBlue" />
    </RelativeLayout>

    <Button
        android:id="@+id/activity_sign_in_facebook_button"
        android:layout_width="75dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@id/activity_sign_in_sign_in_button"
        android:layout_below="@id/activity_sign_in_other_id_layout"
        android:background="@drawable/login_another_id_button1" />

    <Button
        android:id="@+id/activity_sign_in_naver_button"
        android:layout_width="75dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@id/activity_sign_in_facebook_button"
        android:layout_centerHorizontal="true"
        android:background="@drawable/login_another_id_button2" />

    <Button
        android:id="@+id/activity_sign_in_kakaotalk_button"
        android:layout_width="75dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@id/activity_sign_in_facebook_button"
        android:layout_alignRight="@id/activity_sign_in_sign_in_button"
        android:background="@drawable/login_another_id_button3" />

    <TextView
        android:id="@+id/activity_sign_in_sign_up_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_sign_in_naver_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="@string/activity_sign_in_sign_up_string" />
</RelativeLayout>