<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/view_conversation_send_item_conversation_text_view"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="14dp"
        android:layout_marginEnd="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/message_w1"
        android:textColor="@color/bikeeBlack"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/view_conversation_send_item_conversation_time_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/view_conversation_send_item_conversation_text_view"
        android:layout_alignEnd="@id/view_conversation_send_item_conversation_text_view"
        android:layout_below="@id/view_conversation_send_item_conversation_text_view"
        android:layout_marginTop="4dp"
        android:textColor="@color/bikeeGray"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/view_conversation_send_item_unread_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/view_conversation_send_item_conversation_text_view"
        android:layout_toStartOf="@id/view_conversation_send_item_conversation_text_view"
        android:layout_marginRight="4dp"
        android:layout_marginEnd="4dp"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:textColor="@color/bikeeGray"
        android:text="Unread"
        android:textSize="10dp"/>
</RelativeLayout>