<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.tacademy.bikee.renter.reservationbicycle.RenterReservationBicycleDetailInformationActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/activity_renter_reservation_bicycle_detail_information_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/bikeeBlue"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bikeeBackground"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/activity_renter_reservation_bicycle_detail_information_bicycle_picture_name_introduction_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/bikeeWhite"
                android:paddingBottom="38dp">

                <FrameLayout
                    android:id="@+id/activity_renter_reservation_bicycle_detail_information_bicycle_picture_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="307dp">

                    <ImageView
                        android:id="@+id/activity_renter_reservation_bicycle_detail_information_bicycle_picture"
                        android:layout_width="match_parent"
                        android:layout_height="248dp"
                        android:layout_centerHorizontal="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/detailpage_bike_image_noneimage" />

                    <RelativeLayout
                        android:id="@+id/activity_renter_reservation_bicycle_detail_information_lister_information_layout"
                        android:layout_width="match_parent"
                        android:layout_height="87dp"
                        android:layout_gravity="bottom">

                        <ImageView
                            android:id="@+id/activity_renter_reservation_bicycle_detail_information_lister_picture_image_view"
                            android:layout_width="58dp"
                            android:layout_height="58dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="29dp"
                            android:layout_marginLeft="16dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/noneimage" />

                        <TextView
                            android:id="@+id/activity_renter_reservation_bicycle_detail_information_lister_name_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="39dp"
                            android:layout_marginLeft="8dp"
                            android:layout_toRightOf="@id/activity_renter_reservation_bicycle_detail_information_lister_picture_image_view"
                            android:text="Ariana Grande"
                            android:textColor="@color/bikeeBlack"
                            android:textSize="12sp" />

                        <ImageView
                            android:id="@+id/activity_renter_reservation_bicycle_detail_information_talk_image_view"
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginBottom="25dp"
                            android:layout_marginRight="16dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/detailpage_icon_massege" />

                        <ImageView
                            android:id="@+id/activity_renter_reservation_bicycle_detail_information_call_image_view"
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            android:layout_alignBottom="@id/activity_renter_reservation_bicycle_detail_information_talk_image_view"
                            android:layout_marginRight="10dp"
                            android:layout_toLeftOf="@id/activity_renter_reservation_bicycle_detail_information_talk_image_view"
                            android:scaleType="fitXY"
                            android:src="@drawable/detailpage_icon_call" />
                    </RelativeLayout>
                </FrameLayout>

                <TextView
                    android:id="@+id/activity_renter_reservation_bicycle_detail_information_bicycle_title_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/activity_renter_reservation_bicycle_detail_information_bicycle_picture_layout"
                    android:layout_marginTop="29dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="@string/activity_renter_reservation_bicycle_detail_information_bicycle_title_text_view_string"
                    android:textColor="@color/bikeeBlack"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/activity_renter_reservation_bicycle_detail_information_bicycle_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/activity_renter_reservation_bicycle_detail_information_bicycle_title_text_view"
                    android:layout_marginTop="16dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="트랙바가 장착되어 있으며 인라인 브레이크 레버가 장착되어 있습니다. 브레이크는 로드자전거에 장착되는 듀얼피봇 켈리퍼 브레이크가 장착되어 있습니다."
                    android:textColor="@color/bikeeGray"
                    android:textSize="13sp" />
            </RelativeLayout>

            <View
                android:id="@+id/activity_renter_reservation_bicycle_detail_information_bicycle_picture_name_introduction_bicycle_type_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/activity_renter_reservation_bicycle_detail_information_bicycle_picture_name_introduction_layout"
                android:background="@color/bikeeLightGray" />

            <include
                android:id="@+id/activity_renter_reservation_bicycle_detail_information_bicycle_type"
                layout="@layout/bicycle_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_renter_reservation_bicycle_detail_information_bicycle_picture_name_introduction_layout"
                android:layout_centerHorizontal="true" />

            <include
                android:id="@+id/activity_renter_reservation_bicycle_detail_information_bicycle_recommendation_height"
                layout="@layout/bicycle_recommendation_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_renter_reservation_bicycle_detail_information_bicycle_type"
                android:layout_centerHorizontal="true" />

            <include
                android:id="@+id/activity_renter_reservation_bicycle_detail_information_bicycle_additory_component"
                layout="@layout/bicycle_additory_component"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_renter_reservation_bicycle_detail_information_bicycle_recommendation_height"
                android:layout_centerHorizontal="true" />

            <include
                android:id="@+id/activity_renter_reservation_bicycle_detail_information_bicycle_rental_place"
                layout="@layout/bicycle_rental_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_renter_reservation_bicycle_detail_information_bicycle_additory_component"
                android:layout_centerHorizontal="true" />

            <RelativeLayout
                android:id="@+id/activity_renter_reservation_bicycle_detail_information_bicycle_rental_place_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_renter_reservation_bicycle_detail_information_bicycle_additory_component"
                android:background="@drawable/filtering_contentsbox"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    android:id="@+id/activity_renter_reservation_bicycle_detail_information_bicycle_rental_place_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="대여장소 " />

                <TextView
                    android:id="@+id/activity_renter_reservation_bicycle_detail_information_bicycle_rental_place_real_position_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/activity_renter_reservation_bicycle_detail_information_bicycle_rental_place_text_view"
                    android:text="서울시 관악구 봉천동" />

                <fragment
                    android:id="@+id/activity_renter_reservation_bicycle_detail_information_small_map"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="217dp"
                    android:layout_below="@+id/activity_renter_reservation_bicycle_detail_information_bicycle_rental_place_text_view" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_renter_reservation_bicycle_detail_information_bicycle_rental_place_layout"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/activity_renter_reservation_bicycle_detail_information_cancel_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/detailpage_button2"
                    android:text="@string/activity_renter_reservation_bicycle_detail_information_cancel_button_string"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/activity_renter_reservation_bicycle_detail_information_pay_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="16dp"
                    android:layout_toRightOf="@id/activity_renter_reservation_bicycle_detail_information_cancel_button"
                    android:layout_weight="0.5"
                    android:background="@drawable/detailpage_button2"
                    android:text="@string/activity_renter_reservation_bicycle_detail_information_pay_button_string"
                    android:visibility="gone" />
            </LinearLayout>

            <Button
                android:id="@+id/activity_renter_reservation_bicycle_detail_information_cancel_button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_renter_reservation_bicycle_detail_information_bicycle_rental_place_layout"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/detailpage_button2"
                android:text="@string/activity_renter_reservation_bicycle_detail_information_cancel_button2_string"
                android:visibility="gone" />

            <Button
                android:id="@+id/activity_renter_reservation_bicycle_detail_information_input_post_scription_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_renter_reservation_bicycle_detail_information_bicycle_rental_place_layout"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/detailpage_button2"
                android:text="@string/activity_renter_reservation_bicycle_detail_information_input_post_scription_button_string"
                android:visibility="gone" />
        </RelativeLayout>
    </ScrollView>
</android.support.design.widget.CoordinatorLayout>
