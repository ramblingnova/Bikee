<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="#263238">

    <RelativeLayout
        android:id="@+id/gallery_backable_toolbar_back_button_layout"
        android:layout_width="wrap_content"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingEnd="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingStart="16dp">

        <ImageView
            android:id="@+id/gallery_backable_toolbar_back_button_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_before_w" />

        <TextView
            android:id="@+id/gallery_backable_toolbar_back_button_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:layout_toEndOf="@id/gallery_backable_toolbar_back_button_image_view"
            android:layout_toRightOf="@id/gallery_backable_toolbar_back_button_image_view"
            android:text="돌아가기"
            android:textColor="@color/bikeeWhite"
            android:textSize="19sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/gallery_backable_toolbar_folder_button_image_view"
        android:layout_width="28dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/folder_icon_w" />

    <ImageView
        android:id="@+id/gallery_backable_toolbar_picture_button_image_view"
        android:layout_width="28dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_toLeftOf="@id/gallery_backable_toolbar_folder_button_image_view"
        android:layout_toStartOf="@id/gallery_backable_toolbar_folder_button_image_view"
        android:background="@drawable/image_icon_w" />
</RelativeLayout>