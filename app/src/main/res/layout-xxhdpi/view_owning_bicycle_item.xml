<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/contents_box_margin_bottom_5dp"
    android:background="@drawable/filtering_contentsbox"
    android:padding="16dp">

    <ImageView
        android:id="@+id/view_owning_bicycle_item_bicycle_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/temp_icon" />

    <TextView
        android:id="@+id/view_owning_bicycle_item_bicycle_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/view_owning_bicycle_item_bicycle_picture"
        android:text="나의 멋진 자전거" />

    <TextView
        android:id="@+id/view_owning_bicycle_item_register_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_owning_bicycle_item_bicycle_name"
        android:layout_toRightOf="@id/view_owning_bicycle_item_bicycle_picture"
        android:text="등록일: 2015/11/04" />
</RelativeLayout>