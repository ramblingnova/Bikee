<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_search_result_list"
    tools:context="com.example.tacademy.bikee.renter.searchresult.list.SearchResultListFragment">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/view_search_result_item_refresh_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ListView
            android:id="@+id/view_search_result_item_list_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/bikeeBackground"
            android:divider="@null"
            android:dividerHeight="0dp" />
    </android.support.v4.widget.SwipeRefreshLayout>
</FrameLayout>
