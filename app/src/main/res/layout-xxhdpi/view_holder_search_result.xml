<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_holder_search_result"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/contents_box_margin_bottom_5dp"
    android:background="@drawable/renter_list_contents_box"
    android:paddingBottom="24dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="24dp">

    <ImageView
        android:id="@+id/view_search_result_item_bicycle_picture_image_view"
        android:layout_width="120dp"
        android:layout_height="82dp"
        android:src="@drawable/rider_main_miniinfo_image" />

    <TextView
        android:id="@+id/view_search_result_item_bicycle_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/view_search_result_item_bicycle_picture_image_view"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/view_search_result_item_bicycle_picture_image_view"
        android:layout_toRightOf="@id/view_search_result_item_bicycle_picture_image_view"
        android:textColor="@color/bikeeGray"
        android:textSize="14dp" />

    <RelativeLayout
        android:id="@+id/view_search_result_item_height_type_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_search_result_item_bicycle_name_text_view"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@id/view_search_result_item_bicycle_picture_image_view"
        android:layout_toRightOf="@id/view_search_result_item_bicycle_picture_image_view">

        <TextView
            android:id="@+id/view_search_result_item_height_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/bikeeLightGray"
            android:text="신장"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/view_search_result_item_height_real_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/view_search_result_item_height_text_view"
            android:layout_marginLeft="9dp"
            android:layout_marginStart="9dp"
            android:layout_toEndOf="@id/view_search_result_item_height_text_view"
            android:layout_toRightOf="@id/view_search_result_item_height_text_view"
            android:textColor="@color/bikeeGray"
            android:textSize="11dp" />

        <ImageView
            android:id="@+id/view_search_result_item_division"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="9dp"
            android:layout_marginStart="9dp"
            android:layout_toEndOf="@id/view_search_result_item_height_real_text_view"
            android:layout_toRightOf="@id/view_search_result_item_height_real_text_view"
            android:src="@drawable/icon_division" />

        <TextView
            android:id="@+id/view_search_result_item_type_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/view_search_result_item_height_text_view"
            android:layout_marginLeft="9dp"
            android:layout_marginStart="9dp"
            android:layout_toEndOf="@id/view_search_result_item_division"
            android:layout_toRightOf="@id/view_search_result_item_division"
            android:textColor="@color/bikeeLightGray"
            android:text="종류"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/view_search_result_item_type_real_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/view_search_result_item_height_text_view"
            android:layout_marginLeft="9dp"
            android:layout_marginStart="9dp"
            android:singleLine="true"
            android:layout_toEndOf="@id/view_search_result_item_type_text_view"
            android:layout_toRightOf="@id/view_search_result_item_type_text_view"
            android:textColor="@color/bikeeGray"
            android:textSize="11dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/view_search_result_item_payment_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/view_search_result_item_bicycle_picture_image_view"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/view_search_result_item_bicycle_picture_image_view"
        android:layout_toRightOf="@id/view_search_result_item_bicycle_picture_image_view">

        <ImageView
            android:id="@+id/view_search_result_item_payment_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/amount_icon" />

        <TextView
            android:id="@+id/view_search_result_item_payment_real_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp"
            android:layout_toEndOf="@id/view_search_result_item_payment_image_view"
            android:layout_toRightOf="@id/view_search_result_item_payment_image_view"
            android:textColor="@color/bikeeBlue"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/view_search_result_item_per_duration_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/view_search_result_item_payment_real_text_view"
            android:layout_toEndOf="@id/view_search_result_item_payment_real_text_view"
            android:layout_toRightOf="@id/view_search_result_item_payment_real_text_view"
            android:text="일당"
            android:textColor="@color/bikeeBlack"
            android:textSize="11dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/view_search_result_item_distance_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/view_search_result_item_bicycle_picture_image_view"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true">

        <TextView
            android:id="@+id/view_search_result_item_distance_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/bikeeRed"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/view_search_result_item_distance_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="6dp"
            android:layout_marginRight="6dp"
            android:layout_toLeftOf="@id/view_search_result_item_distance_text_view"
            android:layout_toStartOf="@id/view_search_result_item_distance_text_view"
            android:src="@drawable/place_icon" />
    </RelativeLayout>
</RelativeLayout>