<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFFFF"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.337">

        <ImageView
            android:id="@+id/renter_side_menu_renter_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/renter_side_menu_member_name_text_view"
            style="?attr/textAppearanceListItemSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/renter_side_menu_renter_image"
            android:layout_centerHorizontal="true"
            android:text="Bruno Mars" />

        <TextView
            android:id="@+id/renter_side_menu_mail_address_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/renter_side_menu_member_name_text_view"
            android:layout_centerHorizontal="true"
            android:text="bikee@email.com" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.163"
        android:paddingLeft="30dp"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/renter_side_menu_fragment_register_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_margin="3dp"
            android:src="@drawable/temp_icon"
            android:text="결제관리" />

        <TextView
            android:id="@+id/renter_side_menu_evaluation_bicycle_script"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/renter_side_menu_fragment_register_card"
            android:layout_margin="3dp"
            android:src="@drawable/temp_icon"
            android:text="내평가보기" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.43"
        android:paddingLeft="30dp"
        android:paddingTop="15dp">

        <RelativeLayout
            android:id="@+id/renter_side_menu_authentication_information_text_view_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/renter_side_menu_authentication_information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_margin="3dp"
                android:src="@drawable/temp_icon"
                android:text="인증" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/renter_side_menu_push_alarm_text_view_check_box_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/renter_side_menu_authentication_information_text_view_layout">

            <TextView
                android:id="@+id/renter_side_menu_push_alarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_margin="3dp"
                android:src="@drawable/temp_icon"
                android:text="푸시알림" />

            <CheckBox
                android:id="@+id/renter_side_menu_push_alarm_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="3dp"
                android:layout_toRightOf="@id/renter_side_menu_push_alarm" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/renter_side_menu_input_inquiry_text_view_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/renter_side_menu_push_alarm_text_view_check_box_layout">

            <TextView
                android:id="@+id/renter_side_menu_input_inquiry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="3dp"
                android:src="@drawable/temp_icon"
                android:text="고객센터" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/renter_side_menu_version_information_text_view_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/renter_side_menu_input_inquiry_text_view_layout">

            <TextView
                android:id="@+id/renter_side_menu_version_information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_margin="3dp"
                android:src="@drawable/temp_icon"
                android:text="버전정보" />
        </RelativeLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/renter_side_menu_change_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_weight="0.07"
        android:text="Lister모드 전환" />
</LinearLayout>