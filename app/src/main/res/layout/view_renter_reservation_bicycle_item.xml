<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/view_renter_reservation_bicycle_item_image_view"
        android:src="@drawable/temp_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_toRightOf="@id/view_renter_reservation_bicycle_item_image_view"
        android:id="@+id/view_renter_reservation_bicycle_item_bicycle_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="자전거 이름"/>
    <TextView
        android:id="@+id/view_renter_reservation_bicycle_item_payment_type_height"
        android:layout_toRightOf="@id/view_renter_reservation_bicycle_item_image_view"
        android:layout_below="@id/view_renter_reservation_bicycle_item_bicycle_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3000원 / 종류 / 신장"/>
    <TextView
        android:id="@+id/view_renter_reservation_bicycle_item_distance"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.5km"/>
</RelativeLayout>