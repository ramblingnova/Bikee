<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/filtering_contentsbox"
    android:paddingBottom="26dp"
    android:paddingTop="24dp">

    <ImageView
        android:id="@+id/bicycle_location_icon_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:src="@drawable/icon_filtering_1" />

    <TextView
        android:id="@+id/bicycle_location_icon_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/bicycle_location_icon_image_view"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@id/bicycle_location_icon_image_view"
        android:text="위치"
        android:textColor="@color/bikeeBlue"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/bicycle_location_address_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/bicycle_location_icon_text_view"
        android:layout_below="@id/bicycle_location_icon_text_view"
        android:layout_marginTop="10dp"
        android:textColor="@color/bikeeBlack"
        android:textSize="15sp" />
</RelativeLayout>