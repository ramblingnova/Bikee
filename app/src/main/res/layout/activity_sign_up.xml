<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tacademy.bikee.common.SignUpActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/activity_sign_up_image_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/activity_sign_up_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/temp_icon" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/activity_sign_up_name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_sign_up_image_layout"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/activity_sign_up_name_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/sign_up_name" />

            <EditText
                android:id="@+id/activity_sign_up_input_name_edit_box"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_sign_up_mail_address_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_sign_up_name_layout"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/activity_sign_up_mail_address_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/sign_up_mail_address" />

            <EditText
                android:id="@+id/activity_sign_up_input_mail_address_edit_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_sign_up_cellphone_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_sign_up_mail_address_layout"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/activity_sign_up_cellphone_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/sign_up_cellphone" />

            <EditText
                android:id="@+id/activity_sign_up_input_cellphone_edit_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/activity_sign_up_authentication_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/sign_up_authentication" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_sign_up_confirm_authentication_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_sign_up_cellphone_layout"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/activity_sign_up_authentication_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/activity_sign_up_confirm_authentication"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/sign_up_authentication_button" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/password_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_sign_up_confirm_authentication_layout"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/sign_up_password" />

            <EditText
                android:id="@+id/input_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:password="true" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/sign_up_receive_information_agreement_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/password_layout">

            <TextView
                android:id="@+id/sign_up_receive_information_agreement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/sign_up_terms_agreement" />

            <CheckBox
                android:id="@+id/sign_up_mail_information_agreement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sign_up_receive_information_agreement"
                android:text="@string/sign_up_mail_information_agreement" />

            <CheckBox
                android:id="@+id/sign_up_sms_information_agreement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sign_up_mail_information_agreement"
                android:text="@string/sign_up_sms_information_agreement" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/receive_information_agreement_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sign_up_receive_information_agreement_layout">

            <TextView
                android:id="@+id/receive_information_agreement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/sign_up_terms_agreement" />

            <CheckBox
                android:id="@+id/sign_up_terms_bikee_agreement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/receive_information_agreement"
                android:text="@string/sign_up_terms_bikee_agreement" />

            <CheckBox
                android:id="@+id/sign_up_terms_location_information_agreement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sign_up_terms_bikee_agreement"
                android:text="@string/sign_up_terms_location_information_agreement" />

            <CheckBox
                android:id="@+id/sign_up_terms_information_gathering_agreement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sign_up_terms_location_information_agreement"
                android:text="@string/sign_up_terms_information_gathering_agreement" />
        </RelativeLayout>

        <Button
            android:id="@+id/activity_sign_up_signt_up_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/receive_information_agreement_layout"
            android:text="@string/sign_up_button" />
    </RelativeLayout>
</ScrollView>
