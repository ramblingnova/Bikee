<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/view_search_result_item_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/temp_icon" />

    <TextView
        android:id="@+id/view_search_result_item_bicycle_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/view_search_result_item_image_view"
        android:text="자전거 이름" />

    <TextView
        android:id="@+id/view_search_result_item_payment_type_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_search_result_item_bicycle_name"
        android:layout_toRightOf="@id/view_search_result_item_image_view"
        android:text="3000원 / 종류 / 신장" />

    <TextView
        android:id="@+id/view_search_result_item_distance"
        android:layout_below="@id/view_search_result_item_payment_type_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="0.5km" />
</RelativeLayout>