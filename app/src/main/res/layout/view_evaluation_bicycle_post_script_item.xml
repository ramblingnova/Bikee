<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:src="@drawable/temp_icon"
        android:id="@+id/view_evaluation_bicycle_post_script_item_bicycle_piture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/view_evaluation_bicycle_post_script_item_bicycle_name"
        android:layout_toRightOf="@+id/view_evaluation_bicycle_post_script_item_bicycle_piture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="자전거이름"/>

    <TextView
        android:id="@+id/view_evaluation_bicycle_post_script_item_mail_address"
        android:layout_toRightOf="@+id/view_evaluation_bicycle_post_script_item_bicycle_piture"
        android:layout_below="@+id/view_evaluation_bicycle_post_script_item_bicycle_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="메일주소"/>

    <RatingBar
        android:id="@+id/view_evaluation_bicycle_post_script_item_rating_bar"
        android:layout_below="@+id/view_evaluation_bicycle_post_script_item_mail_address"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_toRightOf="@+id/view_evaluation_bicycle_post_script_item_bicycle_piture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/view_evaluation_bicycle_post_script_item_post_script"
        android:layout_below="@+id/view_evaluation_bicycle_post_script_item_rating_bar"
        android:layout_toRightOf="@+id/view_evaluation_bicycle_post_script_item_bicycle_piture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="멋진 자전거에요. 다음에 또 이용하겠습니다."/>

    <TextView
        android:id="@+id/view_evaluation_bicycle_post_script_item_date_time"
        android:layout_below="@+id/view_evaluation_bicycle_post_script_item_post_script"
        android:layout_toRightOf="@+id/view_evaluation_bicycle_post_script_item_bicycle_piture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11.03 00:05"/>
</RelativeLayout>