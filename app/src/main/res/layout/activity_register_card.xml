<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tacademy.bikee.RegisterCardActivity">

    <TextView
        android:id="@+id/activity_register_card_card_sort_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="카드종류" />

    <EditText
        android:id="@+id/activity_register_card_card_sort_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/activity_register_card_card_sort_text_view" />

    <TextView
        android:id="@+id/activity_register_card_card_number_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_register_card_card_sort_text_view"
        android:text="카드번호" />

    <EditText
        android:id="@+id/activity_register_card_card_number_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_register_card_card_sort_text_view"
        android:layout_toRightOf="@id/activity_register_card_card_number_text_view" />

    <TextView
        android:id="@+id/activity_register_card_valid_date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_register_card_card_number_text_view"
        android:text="비밀번호" />

    <EditText
        android:id="@+id/activity_register_card_valid_date_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_register_card_card_number_text_view"
        android:layout_toRightOf="@id/activity_register_card_valid_date_text_view" />

    <TextView
        android:id="@+id/activity_register_card_birth_date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_register_card_valid_date_text_view"
        android:text="카드번호" />

    <EditText
        android:id="@+id/activity_register_card_birth_date_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_register_card_valid_date_text_view"
        android:layout_toRightOf="@id/activity_register_card_birth_date_text_view" />

    <TextView
        android:id="@+id/activity_register_card_password_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_register_card_birth_date_text_view"
        android:text="비밀번호" />

    <EditText
        android:id="@+id/activity_register_card_password_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_register_card_birth_date_text_view"
        android:layout_toRightOf="@id/activity_register_card_password_text_view" />

    <CheckBox
        android:id="@+id/activity_register_check_box"
        android:layout_below="@+id/activity_register_card_password_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아래 약관 내용에 모두 동의합니다." />

    <Button
        android:id="@+id/activity_register_card_register_button"
        android:layout_below="@+id/activity_register_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="등록하기"/>
</RelativeLayout>
