<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/view_search_result_item_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/temp_icon" />

    <TextView
        android:id="@+id/view_search_result_item_bicycle_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/view_search_result_item_image_view"
        android:text="@string/view_search_result_item_bicycle_name_text_view_string" />

    <TextView
        android:id="@+id/view_search_result_item_payment_type_height_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_search_result_item_bicycle_name_text_view"
        android:layout_toRightOf="@id/view_search_result_item_image_view"
        android:text="@string/view_search_result_item_payment_type_height_text_view_string" />

    <TextView
        android:id="@+id/view_search_result_item_distance_text_view"
        android:layout_below="@id/view_search_result_item_payment_type_height_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="@string/view_search_result_item_distance_text_view_string" />
</RelativeLayout>